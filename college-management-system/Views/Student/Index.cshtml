@model CollegeManagementSystem.ViewModels.Student.StudentListViewModel

@{ ViewBag.Title = "Index"; }

<h2>Students registered</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table table-hover table-striped table-bordered">
    <tr>
        <th>Name</th>
        <th class="text-center">Birthday</th>
        <th class="text-center">Registration Number</th>
        <th class="text-center">Actions</th>
    </tr>

    @foreach (var item in Model.Students)
    {
        <tr>
            <td class="col-md-5">
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td class="col-md-1 text-center">
                @Convert.ToDateTime(item.Birthday).ToString("MM/dd/yyyy")
            </td>
            <td class="col-md-1 text-center">
                @Html.DisplayFor(modelItem => item.RegistrationNumber)
            </td>
            <td class="col-md-2 text-center">
                @Html.ActionLink("Enroll", "Create", "Enrollment", new { item.StudentId }, new { @class = "btn btn-default btn-action", title = "Enroll Student" })
                @Html.ActionLink("Edit", "Edit", new { item.StudentId }, new { @class = "btn btn-info btn-action", title = "Edit Student" })
                @using (Html.BeginForm("Delete", "Student", FormMethod.Post, new { style = "display: inline" }))
                {
            <button type="submit" class="btn btn-primary btn-action" title="Delete Student" onclick="return confirm('Do you want to delete this record?')">
                Delete
            </button>
                                <input type="hidden" name="StudentId" value="@item.StudentId" />                }
               
            </td>
        </tr>
    }
</table>