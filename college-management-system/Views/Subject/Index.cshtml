@model CollegeManagementSystem.ViewModels.Subject.SubjectListViewModel

@{ ViewBag.Title = "Index"; }

<h2>Subjects registered</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table table-hover table-striped table-bordered">
    <tr>
        <th>Title</th>
        <th>Credits</th>
        <th>Teacher</th>
        <th class="text-center">Actions</th>
    </tr>

    @foreach (var item in Model.Subjects)
    {
        <tr>
            <td class="col-md-2">
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td class="col-md-2">
                @Html.DisplayFor(modelItem => item.Credits)
            </td>
            <td class="col-md-2">
                @Html.DisplayFor(modelItem => item.Teacher.Name)
            </td>
            <td class="col-md-1 text-center">

                @Html.ActionLink("Edit", "Edit", new {item.SubjectId}, new {@class = "btn btn-info btn-action", title = "Edit Subject"})
                @using (Html.BeginForm("Delete", "Subject", FormMethod.Post, new {style = "display: inline"}))
                {
                    <button type="submit" class="btn btn-primary btn-action" title="Delete Subject" onclick="return confirm('Do you want to delete this record?')">
                        Delete
                    </button>
                    <input type="hidden" name="SubjectId" value="@item.SubjectId"/>
                }
            </td>
        </tr>
    }
</table>