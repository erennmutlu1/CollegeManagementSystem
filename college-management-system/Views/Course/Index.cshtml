@model CollegeManagementSystem.ViewModels.Course.CourseListViewModel

@{ ViewBag.Title = "Index"; }

<h2>Courses registered</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table table-hover table-striped table-bordered">
    <tr>
        <th>Name</th>
        <th class="text-center">Actions</th>
    </tr>

    @foreach (var item in Model.Courses)
    {
        <tr>
            <td class="col-md-6">
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td class="col-md-1 text-center">
                @Html.ActionLink("Edit", "Edit", new {item.CourseId}, new {@class = "btn btn-info btn-action", title = "Edit Course"})
                @using (Html.BeginForm("Delete", "Course", FormMethod.Post, new {style = "display: inline"}))
                {
                    <button type="submit" class="btn btn-primary btn-action" title="Delete Course" onclick="return confirm('Do you want to delete this record?')">
                        Delete
                    </button>
                    <input type="hidden" name="CourseId" value="@item.CourseId"/>
                }
            </td>
        </tr>
    }
</table>