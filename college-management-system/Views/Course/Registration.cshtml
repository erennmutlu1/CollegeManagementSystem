@model CollegeManagementSystem.ViewModels.Course.CourseViewModel

@{
    var action = Model.CourseId != 0 ? "Update" : "Create";
    ViewBag.Title = "Course";
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm("Save", "Course", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.CourseId)

    <div class="form-horizontal">
        <h4>@action</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                @Html.ActionLink("Cancel", "Index", null, new {@class = "btn btn-default btn-custom" })
                <input type="submit" value="Save" class="btn btn-primary btn-custom"/>
            </div>
        </div>
    </div>
}

<div>

</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}